  <!-- NFTs terkini -->
  <div class="px-[120px]">
    <div class="flex justify-between">
      <%- include('./components/categoryButton.ejs', {text: "Koleksi"}) %> <%-
      include('./components/categoryButton.ejs', {text: "Ilustrasi"}) %> <%-
      include('./components/categoryButton.ejs', {text: "Lukisan"}) %> <%-
